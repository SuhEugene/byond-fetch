{
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "lib": ["es2018"],
    "module": "commonjs",
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2018",
    "typeRoots": ["node_modules/@types"]
  },
  "include": ["src"],
  "exclude": ["./lib/**/*", "node_modules"]
}
